{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "baseUrl": "./src",
        "paths": {
            // 设置对应的别名
            "@router/*": [
                "./router/*"
            ],
            "@config/*": [
                "./config/*"
            ],
            "@common/*": [
                "./common/*"
            ],
            "@middleware/*": [
                "./middleware/*"
            ],
            "@models/*": [
                "./models/*"
            ],
            "@service/*": [
                "./service/*"
            ],
            "@controller/*": [
                "./controller/*"
            ],
        },
        "outDir": "./dist",
        "sourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
    },
    "exclude": ["node_modules"], 
    "include": [
        "src/**/*"
    ]
}